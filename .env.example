# BarnHand Horse Streaming Platform - Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://admin:password@localhost:5432/barnhand
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=barnhand
DATABASE_USER=admin
DATABASE_PASSWORD=password
DATABASE_SSL=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# NOTE: Change REDIS_PORT if 6379 is in use by another Redis instance
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# SERVICE PORTS
# Change these if you have port conflicts with other services
# =============================================================================
API_GATEWAY_PORT=8000
STREAM_SERVICE_PORT=8001
ML_SERVICE_PORT=8002
VIDEO_STREAMER_PORT=8003
FRONTEND_PORT=5174
# Additional ports for streaming protocols
RTMP_PORT=1935
HTTP_FLV_PORT=8088
WEBRTC_PORT_START=5000
WEBRTC_PORT_END=5100

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================
API_BASE_URL=http://localhost:8000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15

# =============================================================================
# STREAM PROCESSING
# =============================================================================
CHUNK_DURATION=10
PROCESSING_DELAY=20
MAX_CONCURRENT_STREAMS=10
STREAM_BUFFER_SIZE=30
HLS_SEGMENT_TIME=2
VIDEO_FOLDER=./media
STREAM_COUNT=5

# =============================================================================
# ML SERVICE CONFIGURATION
# =============================================================================
ML_DEVICE=cpu
# ML_DEVICE=cuda  # Uncomment for GPU processing
MODEL_PATH=./models
YOLO_MODEL_PATH=./models/yolo11m.pt
YOLOV5_MODEL_PATH=./models/yolov5m.pt
RTMPOSE_MODEL_PATH=./models/rtmpose-m-ap10k.pth
BATCH_SIZE=8
CONFIDENCE_THRESHOLD=0.5
POSE_CONFIDENCE_THRESHOLD=0.3
SIMILARITY_THRESHOLD=0.7
MAX_FPS_TARGET=50

# =============================================================================
# BEHAVIORAL ANALYSIS CONFIGURATION
# =============================================================================
# ReID Model Configuration
REID_MODEL_TYPE=megadescriptor  # options: cnn, megadescriptor
MEGADESCRIPTOR_MODEL_PATH=hf-hub:BVRA/MegaDescriptor-T-224
REID_SIMILARITY_THRESHOLD=0.6  # Lower for MegaDescriptor (0.6), higher for CNN (0.7)
REID_FEATURE_DIMS=768  # MegaDescriptor: 768, CNN: 512

# State Detection Configuration
ENABLE_HIERARCHICAL_STATE_DETECTION=true
ENABLE_ADVANCED_STATE_DETECTION=true
BEHAVIORAL_CONFIDENCE_THRESHOLD=0.7
STATE_DETECTION_MIN_DURATION=2.0  # Minimum seconds for state detection
STATE_CHANGE_THRESHOLD=0.8  # Confidence threshold for state changes

# Cross-Chunk Persistence
HORSE_REGISTRY_TTL=300  # Redis TTL in seconds (5 minutes)
CROSS_CHUNK_CONTINUITY=true
MAX_HORSE_REGISTRY_SIZE=100  # Max horses per stream to track

# Behavioral Database Configuration
ENABLE_BEHAVIORAL_STORAGE=true
BEHAVIORAL_DATA_RETENTION_DAYS=90  # Days to keep behavioral data
POSE_FRAME_STORAGE_ENABLED=true  # Store individual pose frames
BEHAVIORAL_BATCH_SIZE=50  # Batch size for database writes

# Alert Configuration
BEHAVIORAL_ALERTS_ENABLED=true
ALERT_SIGNIFICANCE_THRESHOLD=0.8  # Minimum significance for alerts
CRITICAL_ALERT_THRESHOLD=0.9  # Threshold for critical alerts
ALERT_COOLDOWN_SECONDS=60  # Minimum seconds between similar alerts

# Performance Settings
BEHAVIORAL_ANALYSIS_MAX_FPS=30  # Target FPS for behavioral analysis
ENABLE_BEHAVIORAL_DEBUG=false  # Enable detailed behavioral logging
BEHAVIORAL_PROCESSING_TIMEOUT=10  # Timeout for behavioral analysis per chunk

# =============================================================================
# YOUTUBE STREAM CONFIGURATION
# =============================================================================
YOUTUBE_COOKIES_FILE=/config/youtube_cookies.txt
PROXY_ROTATION_INTERVAL=300
STREAM_CACHE_DURATION=60
MAX_RETRY_ATTEMPTS=3

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_PORT=8000
WS_HEARTBEAT_INTERVAL=30
WS_TIMEOUT=60

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_MAX_SIZE=100MB
TEMP_STORAGE_PATH=./temp
MEDIA_STORAGE_PATH=./media
MODELS_STORAGE_PATH=./models
CHUNK_STORAGE_PATH=./chunks

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# SECURITY
# =============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
DEBUG=barnhand:*
HOT_RELOAD=true
WATCH_FILES=true

# =============================================================================
# DOCKER SETTINGS (for docker-compose)
# =============================================================================
COMPOSE_PROJECT_NAME=barnhand
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=barnhand