{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@barnhand/shared/*": ["../../shared/src/*"],
      "@barnhand/database/*": ["../database/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist", 
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}